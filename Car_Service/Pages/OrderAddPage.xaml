<Page x:Class="Car_Service.Pages.OrderAddPage"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Car_Service.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderAddPage">

    <Grid Style="{StaticResource GridStyle}" Margin="0,5,0,0">
        <Border Width="724" Padding="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ФИО клиента -->
                <Grid Grid.Row="0" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="ФИО клиента" 
                               Style="{StaticResource TextBlockStyle}" 
                               VerticalAlignment="Center"/>
                    <xctk:WatermarkComboBox Name="fullName" 
                                           Grid.Column="2"
                                           SelectedValuePath="Customers" 
                                           DisplayMemberPath="FullName" 
                                           Height="32" 
                                           VerticalAlignment="Center"
                                           Watermark="Выберите клиента"/>
                </Grid>

                <!-- Транспортное средство -->
                <Grid Grid.Row="1" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Транспортное средство" 
                               Style="{StaticResource TextBlockStyle}" 
                               VerticalAlignment="Center"/>
                    <xctk:WatermarkComboBox Name="CustCar" 
                                           Grid.Column="2"
                                           SelectedValuePath="Vehicles" 
                                           DisplayMemberPath="Model" 
                                           Height="32" 
                                           VerticalAlignment="Center"
                                           Watermark="Выберите транспортное средство"/>
                </Grid>

                <!-- Дата заказа -->
                <Grid Grid.Row="2" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Дата заказа" 
                               Style="{StaticResource TextBlockStyle}" 
                               VerticalAlignment="Center"/>
                    <DatePicker SelectedDate="{Binding DateOrder}" 
                               Grid.Column="2"
                               Height="32" 
                               Width="300"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- Статус заказа -->
                <Grid Grid.Row="3" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Статус заказа" 
                               Style="{StaticResource TextBlockStyle}" 
                               VerticalAlignment="Center"/>
                    <xctk:WatermarkTextBox Text="{Binding Status}" 
                                         Grid.Column="2"
                                         Style="{StaticResource TextBoxStyle}" 
                                         Height="32" 
                                         VerticalAlignment="Center"
                                         Watermark="Выполнен/В процессе"/>
                </Grid>

                <!-- Описание проблемы -->
                <Grid Grid.Row="4" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Описание проблемы" 
                               Style="{StaticResource TextBlockStyle}" 
                               VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Problem}" 
                             Grid.Column="2"
                             Style="{StaticResource TextBoxStyle}" 
                             Height="80"
                             VerticalAlignment="Center"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"/>
                </Grid>

                <!-- Кнопки -->
                <StackPanel Grid.Row="5" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Height="50">
                    <Button x:Name="bSave" 
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Content="Сохранить" 
                            Width="150" 
                            Height="42"
                            Margin="0,0,10,0"
                            Click="bSave_Click"/>
                    <Button x:Name="bBack" 
                            Style="{StaticResource ActiveButtonStyle}" 
                            Content="Назад" 
                            Width="150" 
                            Height="42"
                            Click="bBack_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>