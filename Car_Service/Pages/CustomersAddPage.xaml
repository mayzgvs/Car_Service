<Page x:Class="Car_Service.Pages.CustomersAddPage"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Car_Service.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление клиентов">

    <Grid Style="{StaticResource GridStyle}" Margin="0,5,0,0">
        <Border Width="724" Padding="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ФИО клиента -->
                <Grid Grid.Row="0" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="ФИО клиента" 
                               Style="{StaticResource TextBlockStyle}" 
                               VerticalAlignment="Center"/>
                    <TextBox Text="{Binding FullName}" 
                             Grid.Column="2"
                             Style="{StaticResource TextBoxStyle}" 
                             Height="32" 
                             VerticalAlignment="Center"/>
                </Grid>

                <!-- Номер телефона -->
                <Grid Grid.Row="1" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Номер телефона" 
                               Style="{StaticResource TextBlockStyle}" 
                               VerticalAlignment="Center"/>
                    <xctk:MaskedTextBox Text="{Binding Phone}" 
                                         Grid.Column="2"
                                         Style="{StaticResource TextBoxStyle}" 
                                         Height="32" 
                                         VerticalAlignment="Center"
                                         Mask="+7(000)000 00-00"/>
                </Grid>

                <!-- Email -->
                <Grid Grid.Row="2" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Email" 
                               Style="{StaticResource TextBlockStyle}" 
                               VerticalAlignment="Center"/>
                    <xctk:WatermarkTextBox Text="{Binding Email}" 
                                           Grid.Column="2"
                                           Style="{StaticResource TextBoxStyle}" 
                                           Height="32" 
                                           VerticalAlignment="Center"
                                           Watermark="example@gmail.com"/>
                </Grid>

                <!-- Адрес -->
                <Grid Grid.Row="3" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Адрес" 
                               Style="{StaticResource TextBlockStyle}" 
                               VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Adress}" 
                             Grid.Column="2"
                             Style="{StaticResource TextBoxStyle}" 
                             Height="32" 
                             VerticalAlignment="Center"/>
                </Grid>

                <!-- Кнопки -->
                <StackPanel Grid.Row="4" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Bottom"
                            Margin="0,30,0,0"
                            Height="50">
                    <Button x:Name="bSave" 
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Content="Сохранить" 
                            Width="150" 
                            Height="42"
                            Margin="0,0,10,0"
                            Click="bSave_Click"/>
                    <Button x:Name="bBack" 
                            Style="{StaticResource ActiveButtonStyle}" 
                            Content="Назад" 
                            Width="150" 
                            Height="42"
                            Click="bBack_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>