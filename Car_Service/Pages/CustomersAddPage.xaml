<Page x:Class="Car_Service.Pages.CustomersAddPage"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Car_Service.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomersAddPage">

    <Grid Style="{StaticResource GridStyle}" Margin="0,5,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="ФИО клиента" Style="{Binding TextBlockStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Height="auto"/>
        <TextBlock Text="Номер телефона" Style="{Binding TextBlockStyle}" Grid.Row="1"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="auto"/>
        <TextBlock Text="Email" Style="{Binding TextBlockStyle}" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="auto"/>
        <TextBlock Text="Адресс" Style="{Binding TextBlockStyle}" Grid.Row="3"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="auto"/>

        <TextBox Text="{Binding FullName}" Style="{Binding TextBoxStyle}" Grid.Column="1" Height="32" Width="530" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <xctk:MaskedTextBox Text="{Binding Phone}" Style="{Binding TextBoxStyle}" Grid.Row="1" Grid.Column="1" Height="32" Width="530" VerticalAlignment="Center" HorizontalAlignment="Center" Mask="+7(000)000 00-00"/>
        <xctk:WatermarkTextBox Text="{Binding Email}" Style="{Binding TextBoxStyle}" Grid.Row="2" Grid.Column="1" Height="32" Width="530" VerticalAlignment="Center" HorizontalAlignment="Center" Watermark="example@gmail.com"/>
        <TextBox Text="{Binding Adress}" Style="{Binding TextBoxStyle}" Grid.Column="1" Grid.Row="3" Height="32" Width="530" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <Button x:Name="bSave" Style="{StaticResource PrimaryButtonStyle}" Content="Сохранить" Grid.Row="5" Grid.Column="1" Width="132" Click="bSave_Click" Height="42" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="190,0,0,0"/>
        <Button x:Name="bBack" Style="{StaticResource ActiveButtonStyle}" Content="Назад" Grid.Row="5" Grid.Column="1" Width="133"  Margin="397,0,0,0" Height="42" VerticalAlignment="Center" HorizontalAlignment="Left" Click="bBack_Click"/>
    </Grid>
</Page>
