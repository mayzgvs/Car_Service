<Page x:Class="Car_Service.Pages.ServiceAddPage"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Car_Service.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление услуг">

    <Grid Style="{StaticResource GridStyle}" Margin="0,5,0,0">
        <Border Width="724" Padding="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Название услуги -->
                <Grid Grid.Row="0" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Название услуги" 
                                Style="{StaticResource TextBlockStyle}" 
                                VerticalAlignment="Center"/>
                    <TextBox Text="{Binding ServiceName}" 
                             Grid.Column="2"
                             Style="{StaticResource TextBoxStyle}" 
                             Height="32" 
                             VerticalAlignment="Center"/>
                </Grid>

                <!-- Описание -->
                <Grid Grid.Row="1" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Описание" 
                Style="{StaticResource TextBlockStyle}" 
                VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Description}" 
             Grid.Column="2"
             Style="{StaticResource TextBoxStyle}" 
             Height="32" 
             VerticalAlignment="Center"/>
                </Grid>

                <!-- Стоимость -->
                <Grid Grid.Row="2" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Стоимость" 
                               Style="{StaticResource TextBlockStyle}" 
                               VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Price}" 
                             Grid.Column="2"
                             Style="{StaticResource TextBoxStyle}" 
                             Height="32" 
                             VerticalAlignment="Center"/>
                </Grid>

                <StackPanel Grid.Row="3" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Bottom"
                            Margin="0,30,0,0"
                            Height="50">
                    <Button x:Name="bSave" 
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Content="Сохранить" 
                            Width="150" 
                            Height="42"
                            Margin="0,0,10,0"
                            Click="bSave_Click"/>
                    <Button x:Name="bBack" 
                            Style="{StaticResource ActiveButtonStyle}" 
                            Content="Назад" 
                            Width="150" 
                            Height="42"
                            Click="bBack_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
