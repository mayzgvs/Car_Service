<Page x:Class="Car_Service.Pages.WorkAddPage"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Car_Service.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WorkAddPage">

    <Grid Style="{StaticResource GridStyle}" Margin="0,5,0,0">
        <Border Width="724" Padding="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заказ -->
                <Grid Grid.Row="0" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Заказ" 
                           Style="{StaticResource TextBlockStyle}" 
                           VerticalAlignment="Center"/>
                    <xctk:WatermarkComboBox Name="NumOrder" 
                                       Grid.Column="2"
                                       SelectedValuePath="Orders" 
                                       DisplayMemberPath="Problem" 
                                       Height="32" 
                                       VerticalAlignment="Center"
                                       Watermark="Выберите проблему"/>
                </Grid>

                <!-- Сотрудник -->
                <Grid Grid.Row="1" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Сотрудник" 
                           Style="{StaticResource TextBlockStyle}" 
                           VerticalAlignment="Center"/>
                    <xctk:WatermarkComboBox Name="Position" 
                                       Grid.Column="2"
                                       SelectedValuePath="Employees" 
                                       DisplayMemberPath="Position" 
                                       Height="32" 
                                       VerticalAlignment="Center"
                                       Watermark="Выберите сотрудника"/>
                </Grid>

                <!-- Услуга -->
                <Grid Grid.Row="2" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Услуга" 
                           Style="{StaticResource TextBlockStyle}" 
                           VerticalAlignment="Center"/>
                    <xctk:WatermarkComboBox Name="sName" 
                                           Grid.Column="2"
                                           SelectedValuePath="Services" 
                                           DisplayMemberPath="ServiceName" 
                                           Height="32" 
                                           VerticalAlignment="Center"
                                           Watermark="Выберите услугу"/>
                </Grid>
                
                <!-- Запчасть -->
                <Grid Grid.Row="3" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Запчасть" 
                                Style="{StaticResource TextBlockStyle}" 
                                VerticalAlignment="Center"/>
                    <xctk:WatermarkComboBox Name="pName" 
                                           Grid.Column="2"
                                           SelectedValuePath="Parts" 
                                           DisplayMemberPath="PartName" 
                                           Height="32" 
                                           VerticalAlignment="Center"
                                           Watermark="Выберите запчасть"/>
                </Grid>

                <!-- Кнопки -->
                <StackPanel Grid.Row="4" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom"
                        Margin="0,30,0,0"
                        Height="50">
                    <Button x:Name="bSave" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Content="Сохранить" 
                        Width="150" 
                        Height="42"
                        Margin="0,0,10,0"
                        Click="bSave_Click"/>
                    <Button x:Name="bBack" 
                        Style="{StaticResource ActiveButtonStyle}" 
                        Content="Назад" 
                        Width="150" 
                        Height="42"
                        Click="bBack_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
