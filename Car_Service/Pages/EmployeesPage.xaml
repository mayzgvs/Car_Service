<Page x:Class="Car_Service.Pages.EmployeesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Car_Service.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Сотрудники">

    <Grid Style="{StaticResource GridStyle}" Margin="0,5,0,0">

        <Grid.RowDefinitions>
            <RowDefinition Height="202*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="DGridEmployee" AutoGenerateColumns="False" IsReadOnly="True" Style="{StaticResource DataGridStyle}" Margin="0,0,0,2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО сотрудника" Binding="{Binding FullName}" Width ="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Должность" Binding="{Binding Position}" Width ="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width ="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Номер телефона" Binding="{Binding Phone}" Width ="*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Назад" ToolTip="Нажмите, чтобы вернуться на главную страницу" Style="{DynamicResource ActiveButtonStyle}" HorizontalAlignment="Right" Grid.Row="1" Width="140" x:Name="BtnBack" Click="BtnBack_Click" Margin="0,0,10,0" Height="40" VerticalAlignment="Center">
        </Button>

        <Button Content="Редактировать" Style="{DynamicResource PrimaryButtonStyle}" HorizontalAlignment="Left" Grid.Row="1" Width="140" x:Name="BtnRed"  Margin="10,0,0,0" Height="40" VerticalAlignment="Center" Click="BtnRed_Click">
        </Button>

        <Button Content="Удалить" Style="{DynamicResource PrimaryButtonStyle}" HorizontalAlignment="Left" Grid.Row="1" Width="140" x:Name="BtnDelete" Click="BtnDelete_Click" Margin="155,0,0,0" Height="40" VerticalAlignment="Center">
        </Button>
    </Grid>
</Page>
