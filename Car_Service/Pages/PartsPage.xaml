<Page x:Class="Car_Service.Pages.PartsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Car_Service.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PartsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="202*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>

        <ListView x:Name="LViewParts" Style="{DynamicResource ListViewStyle}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Наименование" DisplayMemberBinding="{Binding PartName}" Width="Auto"/>
                    <GridViewColumn Header="Стоимость" DisplayMemberBinding="{Binding Price}" Width="Auto"/>
                    <GridViewColumn Header="Адрес склада" DisplayMemberBinding="{Binding Inventory.Adress}" Width="Auto"/>
                    <GridViewColumn Header="Наименование склада" DisplayMemberBinding="{Binding Inventory.InventoryName}" Width="Auto"/>

                    <GridViewColumn Header="Картинка" Width="250">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Width="100" Stretch="UniformToFill" HorizontalAlignment="Center">
                                    <Image.Source>
                                        <Binding Path="Picture">
                                            <Binding.TargetNullValue>
                                                <BitmapImage UriSource=""/>
                                            </Binding.TargetNullValue>
                                        </Binding>
                                    </Image.Source>
                                </Image>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="Назад" Style="{DynamicResource ActiveButtonStyle}" HorizontalAlignment="Right" Grid.Row="1" Width="140" x:Name="BtnBack" Click="BtnBack_Click" Margin="0,0,10,0" Height="40" VerticalAlignment="Center">
        </Button>

        <Button Content="Добавить" Style="{DynamicResource PrimaryButtonStyle}" HorizontalAlignment="Left" Grid.Row="1" Width="140" x:Name="BtnAdd" Click="BtnAdd_Click" Margin="10,0,0,0" Height="40" VerticalAlignment="Center">
        </Button>

        <Button Content="Редактировать" Style="{DynamicResource PrimaryButtonStyle}" HorizontalAlignment="Left" Grid.Row="1" Width="140" x:Name="BtnRed"  Margin="162,0,0,0" Height="40" VerticalAlignment="Center" Click="BtnRed_Click">
        </Button>

        <Button Content="Удалить" Style="{DynamicResource PrimaryButtonStyle}" HorizontalAlignment="Left" Grid.Row="1" Width="140" x:Name="BtnDelete" Click="BtnDelete_Click" Margin="316,0,0,0" Height="40" VerticalAlignment="Center">
        </Button>
    </Grid>
</Page>
