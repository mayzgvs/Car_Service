<Page x:Class="Car_service.Pages.PartsAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Car_service.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление запчастей">


    <Grid Style="{StaticResource GridStyle}" Margin="0,5,0,0">
        <Border Width="724" Padding="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Наименование -->
                <Grid Grid.Row="0" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Наименование запчасти" 
                               Style="{StaticResource TextBlockStyle}" 
                               VerticalAlignment="Center"/>
                    <TextBox Text="{Binding PartName}" 
                             Grid.Column="2"
                             Style="{StaticResource TextBoxStyle}" 
                             Height="32" 
                             VerticalAlignment="Center"/>
                </Grid>

                <!-- Стоимость -->
                <Grid Grid.Row="1" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Стоимость" 
                               Style="{StaticResource TextBlockStyle}" 
                               VerticalAlignment="Center"/>
                    <xctk:CalculatorUpDown Value="{Binding Price}"
                                         Grid.Column="2"
                                         Height="32" 
                                         VerticalAlignment="Center"
                                         FormatString="C2"/>
                </Grid>

                <!-- Склад -->
                <Grid Grid.Row="2" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Склад" 
                               Style="{StaticResource TextBlockStyle}" 
                               VerticalAlignment="Center"/>
                    <xctk:WatermarkComboBox Name="cbInventory"
                                          Grid.Column="2"
                                          SelectedValuePath="InventoryID"
                                          DisplayMemberPath="Adress"
                                          Height="32"
                                          VerticalAlignment="Center"
                                          Watermark="Выберите склад"/>
                </Grid>

                <!-- Изображение -->
                <Grid Grid.Row="3" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Изображение" 
                               Style="{StaticResource TextBlockStyle}" 
                               VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="Выбрать" 
                                Style="{StaticResource SecondaryButtonStyle}"
                                Width="100"
                                Height="32"
                                Margin="0,0,10,0"
                                Click="BtnSelectImage_Click"/>
                        <Image x:Name="PartImage" Width="100" Height="32" Stretch="Uniform"/>
                    </StackPanel>
                </Grid>

                <!-- Кнопки -->
                <StackPanel Grid.Row="5" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Bottom"
                            Margin="0,30,0,0"
                            Height="50">
                    <Button x:Name="bSave" 
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Content="Сохранить" 
                            Width="150" 
                            Height="42"
                            Margin="0,0,10,0"
                            Click="bSave_Click"/>
                    <Button x:Name="bBack" 
                            Style="{StaticResource ActiveButtonStyle}" 
                            Content="Назад" 
                            Width="150" 
                            Height="42"
                            Click="bBack_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>