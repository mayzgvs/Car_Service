<Page x:Class="Car_Service.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Car_Service.Pages"
      mc:Ignorable="d"
      Title="RegPage" Height="700" Width="800">

    <Grid Style="{DynamicResource GridStyle}" Margin="0,5,0,10">
        <Border Background="Transparent" CornerRadius="10" Padding="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="564" Height="534">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="5" BlurRadius="10" Opacity="0.5"/>
            </Border.Effect>

            <Grid Style="{StaticResource GridStyle}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Регистрация" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Label Content="Имя:" Style="{StaticResource LabelStyle}" Grid.Row="1" Grid.Column="0" Margin="5"/>
                <TextBox x:Name="nameText" Style="{StaticResource TextBoxStyle}" Grid.Row="1" Grid.Column="1" Margin="5"/>

                <Label Content="Фамилия:" Style="{StaticResource LabelStyle}" Grid.Row="2" Grid.Column="0" Margin="5"/>
                <TextBox x:Name="surnameText" Style="{StaticResource TextBoxStyle}" Grid.Row="2" Grid.Column="1" Margin="5"/>

                <Label Content="Должность:" Style="{StaticResource LabelStyle}" Grid.Row="3" Grid.Column="0" Margin="5"/>
                <TextBox x:Name="posText" Style="{StaticResource TextBoxStyle}" Grid.Row="3" Grid.Column="1" Margin="5"/>

                <Label Content="Номер телефона:" Style="{StaticResource LabelStyle}" Grid.Row="4" Grid.Column="0" Margin="5"/>
                <TextBox x:Name="phoneText" Style="{StaticResource TextBoxStyle}" Grid.Row="4" Grid.Column="1" Margin="5"/>

                <Label Content="Email:" Style="{StaticResource LabelStyle}" Grid.Row="5" Grid.Column="0" Margin="5"/>
                <TextBox x:Name="emailText" Style="{StaticResource TextBoxStyle}" Grid.Row="5" Grid.Column="1" Margin="5"/>

                <Label Content="Логин:" Style="{StaticResource LabelStyle}" Grid.Row="6" Grid.Column="0" Margin="5"/>
                <TextBox x:Name="tbLogin" Style="{StaticResource TextBoxStyle}" Grid.Row="6" Grid.Column="1" Margin="5"/>

                <Label Content="Пароль:" Style="{StaticResource LabelStyle}" Grid.Row="7" Grid.Column="0" Margin="5"/>
                <PasswordBox x:Name="psBox" Style="{StaticResource PasswordBoxStyle}" Grid.Row="7" Grid.Column="1" Margin="5"/>

                <Button x:Name="registerButton" Style="{DynamicResource PrimaryButtonStyle}" Content="Зарегистрироваться" Grid.Row="8" HorizontalAlignment="Left" Margin="34,30,0,-10" Click="registerButton_Click" Width="200" Height="40" Grid.Column="1"/>
                <Button x:Name="BackButton" Style="{DynamicResource ActiveButtonStyle}" Content="Назад" Grid.Row="8" HorizontalAlignment="Left" Margin="205,0,0,-115" Width="200" Height="40" Grid.Column="1" Click="BackButton_Click" VerticalAlignment="Bottom"/>
            </Grid>
        </Border>
    </Grid>
</Page>
