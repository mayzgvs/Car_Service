<Page x:Class="Car_Service.Pages.RegPage"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Car_Service.Pages"
      mc:Ignorable="d"
      Title="Регистрация" Height="700" Width="800">

    <Grid Style="{StaticResource GridStyle}">
        <Border CornerRadius="10" BorderThickness="2" VerticalAlignment="Center" HorizontalAlignment="Center" Width="600" Padding="30">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="5" BlurRadius="10" Opacity="0.5"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Регистрация" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="ФИО сотрудника:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
                    <TextBox x:Name="nameText" Style="{StaticResource TextBoxStyle}" Grid.Column="1" Height="30"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Должность:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
                    <TextBox x:Name="posText" Style="{StaticResource TextBoxStyle}" Grid.Column="1" Height="30"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Номер телефона:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
                    <xctk:MaskedTextBox x:Name="phoneText" Style="{StaticResource TextBoxStyle}" Grid.Column="1" Height="30" Mask="+7(000)000 00-00"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Email:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
                    <xctk:WatermarkTextBox x:Name="emailText" Style="{StaticResource TextBoxStyle}" Grid.Column="1" Height="30" Watermark="example@gmail.ru"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Логин:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
                    <TextBox x:Name="tbLogin" Style="{StaticResource TextBoxStyle}" Grid.Column="1" Height="30"/>
                </Grid>

                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Пароль:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
                    <PasswordBox x:Name="psBox" Style="{StaticResource PasswordBoxStyle}" Grid.Column="1" Height="30"/>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="registerButton" Style="{DynamicResource PrimaryButtonStyle}" 
                                Content="Зарегистрироваться" Width="200" Height="40" 
                                Click="registerButton_Click" Margin="10,0"/>
                    <Button x:Name="BackButton" Style="{DynamicResource ActiveButtonStyle}" 
                                Content="Назад" Width="200" Height="40" 
                                Click="BackButton_Click" Margin="10,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>