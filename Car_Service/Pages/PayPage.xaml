<Page x:Class="Car_Service.Pages.PayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Car_Service.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PayPage">

    <Grid Style="{DynamicResource GridStyle}" Margin="0,5,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="202*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="DGridPayments" AutoGenerateColumns="False" IsReadOnly="True" Style="{StaticResource DataGridStyle}" Margin="0,0,0,2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Заказ" Binding="{Binding Orders.OrderID}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Имя клиента" Binding="{Binding Customers.FirstName}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Фамилия клиента" Binding="{Binding Customers.LastName}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Итоговая стоимость" Binding="{Binding Amount}" Width="*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Назад" Style="{StaticResource ActiveButtonStyle}" HorizontalAlignment="Right" Grid.Row="1" Width="140" x:Name="BtnBack" Click="BtnBack_Click" Margin="0,0,10,0" Height="40" VerticalAlignment="Center">
        </Button>

        <Button Content="Добавить" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Left" Grid.Row="1" Width="140" x:Name="BtnAdd" Click="BtnAdd_Click" Margin="10,0,0,0" Height="40" VerticalAlignment="Center">
        </Button>

        <Button Content="Удалить" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Left" Grid.Row="1" Width="140" x:Name="BtnDelete" Click="BtnDelete_Click" Margin="170,0,0,0" Height="40" VerticalAlignment="Center">
        </Button>
    </Grid>
</Page>
